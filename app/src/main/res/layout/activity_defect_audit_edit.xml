<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_60">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="center_vertical|right"
                        android:minHeight="@dimen/dp_35"
                        android:text="线路名字："
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/defect_line_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/dp_35"
                        android:text="暂无"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="缺陷杆塔："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tower_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="缺陷等级："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/defect_grade_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15"
                            android:visibility="gone"/>

                        <RadioGroup
                            android:id="@+id/rg_content_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/check_one_button"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:button="@null"
                                android:drawableLeft="@drawable/selector_defect_level"
                                android:text="危急"
                                android:drawablePadding="6dp"
                                android:textColor="@color/black_gray" />


                            <RadioButton
                                android:id="@+id/check_two_button"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:button="@null"
                                android:drawableLeft="@drawable/selector_defect_level"
                                android:text="严重"
                                android:drawablePadding="6dp"
                                android:textColor="@color/black_gray" />

                            <RadioButton
                                android:id="@+id/check_three_button"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:button="@null"
                                android:drawableLeft="@drawable/selector_defect_level"
                                android:text="一般"
                                android:drawablePadding="6dp"
                                android:textColor="@color/black_gray" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="审核状态："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/defect_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical|right"
                        android:text="缺陷内容："
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/defect_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="暂无"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical|right"
                        android:text="巡视内容："
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/patrol_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="暂无"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="缺陷类别："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/defect_category_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="处理措施："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/defect_deal_notes"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15"
                            android:visibility="gone"/>

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/defect_spinner"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:padding="3dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="发现人："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/defect_find_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="发现班组："
                            android:textColor="@color/color_33" />

                        <TextView
                            android:id="@+id/defect_find_dep_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="发现时间："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/defect_find_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="处理人："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/deal_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="处理部门："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/deal_dep_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:gravity="center_vertical|right"
                            android:minHeight="@dimen/dp_35"
                            android:text="处理时间："
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/deal_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/dp_35"
                                android:text="*"
                                android:textColor="@color/write_red"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/dp_35"
                                android:text="截止时间："
                                android:textColor="@color/color_33"
                                android:textSize="@dimen/sp_15" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/defect_deadline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:drawableRight="@mipmap/down_arrow"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_35"
                            android:text="暂无"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/image_overlay_false" />

                <TextView
                    android:id="@+id/deffect_img"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:gravity="center_vertical|right"
                    android:minHeight="@dimen/dp_35"
                    android:text="现场照片："
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone" />
                <!--展示上传的图片-->
                <GridView
                    android:id="@+id/defect_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:columnWidth="60dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="auto_fit"
                    android:verticalSpacing="10dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/dp_10"
            android:background="@color/bg_gray"
            >
            <TextView
                android:id="@+id/stock_in"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="入库"
                />
            <TextView
                android:id="@+id/turn_to_repair"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="转检修"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>