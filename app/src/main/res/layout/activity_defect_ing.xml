                android:text="线路名称：" />

            <TextView
                android:id="@+id/defect_tower_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="杆塔名称：" />

            <TextView
                android:id="@+id/defect_find_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="发现人：" />

            <TextView
                android:id="@+id/defect_allote_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="状态：" />

            <TextView
                android:id="@+id/defect_deal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="处理人：" />

            <!--<TextView-->
                <!--android:id="@+id/defect_pat_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:text="检测人：张三" />-->

            <!--<TextView-->
                <!--android:id="@+id/defect_group_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:text="工作负责人：李四" />-->

            <TextView
                android:id="@+id/defect_dep_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="工作班组：" />

            <!--<TextView-->
                <!--android:id="@+id/defect_reamark"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
