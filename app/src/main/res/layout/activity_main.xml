<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homebackground"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="巡检终端"
         android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_40"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/main_to_task"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_30"
            android:background="@mipmap/task"
            >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="任务"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/dp_80"
               android:textColor="@color/main_black"
               android:textSize="@dimen/sp_18"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_to_plan"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="@mipmap/plan"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划"
                android:layout_marginTop="@dimen/dp_80"
                android:textColor="@color/main_black"
                android:textSize="@dimen/sp_18"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/main_to_auditing"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_30"
            android:gravity="center_horizontal"
            android:background="@mipmap/upcoming"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待办"
                android:textColor="@color/main_black"
                android:layout_marginTop="@dimen/dp_80"
                android:textSize="@dimen/sp_18"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_to_total"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@mipmap/statistics"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="统计"
                android:textColor="@color/main_black"
                android:layout_marginTop="@dimen/dp_80"
                android:textSize="@dimen/sp_18"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/main_history"
        android:layout_width="120dp"
        android:layout_height="@dimen/dp_30"
        android:gravity="center"
        android:text="◀ 历史记录"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/main_white_bg"
        android:textColor="@color/main_black"
        android:textSize="@dimen/sp_16"
        />
</LinearLayout>
