<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyInfoActivity">

    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.swiperefreshlayout.widget.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/poa_smiling_face" />

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="16dp"

            android:text="杨刚"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="16dp"
            android:text="兰州运维班" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/image_overlay_false"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="职务"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_33"
            />

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="运行班班长"
            android:drawableRight="@mipmap/icon_go"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/color_69"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/image_overlay_false"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="电话号码"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_33"
            />

        <EditText
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="添加手机号码"
            android:background="@null"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_go"
            android:drawablePadding="@dimen/dp_10"
            android:maxLength="11"
            android:inputType="number"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_69"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/image_overlay_false"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="出生日期"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_33"
            />

        <TextView
            android:id="@+id/user_birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1960-1-1"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_69"
            android:drawableRight="@mipmap/icon_go"
            android:drawablePadding="@dimen/dp_10"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/image_overlay_false"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="性别"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_33"
            />

        <TextView
            android:id="@+id/user_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="男"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_69"
            android:drawableRight="@mipmap/icon_go"
            android:drawablePadding="@dimen/dp_10"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/image_overlay_false"
        />
</LinearLayout>