<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include  layout="@layout/include_title"/>
    <RadioGroup
        android:id="@+id/task_rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:visibility="gone"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/task_rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/selector_choose_bg"
            android:textColor="@drawable/selector_main_tv_color"
            android:button="@null"
            android:checked="true"
            android:text="缺陷"
            />
        <RadioButton
            android:id="@+id/task_rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/selector_choose_bg"
            android:textColor="@drawable/selector_main_tv_color"
            android:button="@null"
            android:text="隐患"
            />
        <RadioButton
            android:id="@+id/task_rb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/selector_choose_bg"
            android:textColor="@drawable/selector_main_tv_color"
            android:button="@null"
            android:text="检测"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_status_bar"
        android:orientation="vertical">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <com.patrol.terminal.widget.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
