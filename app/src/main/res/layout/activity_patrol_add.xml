<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.PatrolAddActivity">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="巡视名称:"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/et_patrol_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/week_white_bg"
                    android:gravity="center_vertical"
                    android:hint="请输入巡视名称"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="起始杆塔:"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/patrol_start_tower"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/week_white_bg"
                    android:gravity="center_vertical"
                    android:hint="请选择巡视起点杆塔"
                    android:paddingLeft="@dimen/dp_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="终点杆塔:"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/patrol_ower_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/week_white_bg"
                    android:gravity="center_vertical"
                    android:hint="请选择巡视终点杆塔"
                    android:paddingLeft="@dimen/dp_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="巡视日期:"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/patrol_ower_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/week_white_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center_horizontal"
                    android:text="备       注:"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/patrol_ower_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/week_gray_bg"
                    android:gravity="left"
                    android:hint="请输入备注信息"
                    android:padding="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/patrol_ower_standar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/dp_10"
                android:autoLink="all"
                android:padding="@dimen/dp_10"
                android:text="巡视标准"
                android:textColor="@color/week_color"
                android:textSize="@dimen/sp_14" />

            <!--展示上传的图片-->
            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:columnWidth="60dp"
                android:horizontalSpacing="10dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp" />

            <TextView
                android:id="@+id/patrol_ower_finish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_40"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>