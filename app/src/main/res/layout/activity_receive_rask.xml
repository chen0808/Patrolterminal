<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ReceiveTaskActivity">
    <include layout="@layout/include_title"/>
    <TextView
        android:id="@+id/personal_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线路名称 : 桃开一线"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/personal_task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务类型 : 定期巡视"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/personal_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期 : 2019-04"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/personal_task_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人员 : 张三"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/personal_task_tower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杆塔 : 0-30#"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/personal_task_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="描述 : 定期巡视"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_refuse"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="2"
                android:background="@color/write_red"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/task_receive"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="2"
                android:background="@color/green"
                android:gravity="center"
                android:text="接收"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>