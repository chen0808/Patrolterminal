<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"></include>

    <LinearLayout
        android:layout_marginTop="49dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/line_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/stoke_gray"
            android:hint="线路名称"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tower_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/stoke_gray"
            android:hint="杆塔号"
            android:padding="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_tower_type"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/stoke_gray"
            android:hint="杆塔型号"
            android:padding="4dp" />

        <EditText
            android:id="@+id/et_jyz_type"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/stoke_gray"
            android:hint="绝缘子型号"
            android:padding="4dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_pieces"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/stoke_gray"
        android:inputType="number"
        android:hint="脉冲零值（低值）绝缘子片数合计"
        android:padding="4dp" />

    <EditText
        android:id="@+id/et_conclusion"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/stoke_gray"
        android:gravity="top"
        android:hint="结论"
        android:padding="4dp" />

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/stoke_gray"
        android:gravity="top"
        android:hint="备注"
        android:padding="4dp" />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:background="@color/bg_gray"
        android:text="提交" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/mengban"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="49dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />
</RelativeLayout>