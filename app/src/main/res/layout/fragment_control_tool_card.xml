<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ControlCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/plan_ll_styl"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/control_xianlu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110kV 1124........"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/control_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="工器具标准配置表"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/add_btn_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:layout_marginLeft="10dp"
                ></Button>
        </LinearLayout>

        <View style="@style/control_line_styl"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="序号"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="名称"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="型号/规格"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="单位"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="数量"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="备注"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />
        </LinearLayout>
        <View style="@style/control_line_styl" />

        <com.patrol.terminal.widget.NoScrollListView
            android:id="@+id/control_card_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            ></com.patrol.terminal.widget.NoScrollListView>



        <LinearLayout
            style="@style/plan_ll_styl"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/control_xianlu_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110kV 1124........"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/control_card_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="材料标准配置表"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/add_btn_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:layout_marginLeft="10dp"
                ></Button>
        </LinearLayout>
        <View style="@style/control_line_styl"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="序号"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="名称"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="型号/规格"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="单位"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="数量"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="备注"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />
        </LinearLayout>
        <View style="@style/control_line_styl" />

        <com.patrol.terminal.widget.NoScrollListView
            android:id="@+id/control_card_div_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            ></com.patrol.terminal.widget.NoScrollListView>

        <TextView
            android:id="@+id/control_card_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/gray_plan"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</ScrollView>