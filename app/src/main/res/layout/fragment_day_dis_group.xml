<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.CheckActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        >
        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="分组"
            android:textStyle="bold"
            android:drawableLeft="@mipmap/plan_icon"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_33"
            />

        <TextView
            android:id="@+id/task_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/task_title"
            android:gravity="center_vertical"
            android:text="2019年4月" />
        <TextView
            android:id="@+id/plan_submit"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="提交"
            android:gravity="center_vertical"
            android:background="@drawable/btn_white_bg"
            android:paddingLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_10"
            android:layout_toRightOf="@id/task_date"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/plan_create"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toLeftOf="@id/task_add"
            android:background="@drawable/btn_white_bg"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="发布"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/task_screen"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/screen"
            android:layout_marginRight="@dimen/dp_50"
            android:visibility="gone"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/task_add"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:scaleType="center"
            android:src="@mipmap/add_icon" />
    </RelativeLayout>
</LinearLayout>