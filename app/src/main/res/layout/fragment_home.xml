                    android:textColor="@color/color_69"
                    android:textSize="@dimen/sp_22"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ll_last_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
