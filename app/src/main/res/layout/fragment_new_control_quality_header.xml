<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/plan_ll_styl"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            style="@style/control_tv_styl"
            android:text="作业名称 :" />

        <TextView
            android:id="@+id/control_card_name"
            style="@style/control_card_tv_style" />
    </LinearLayout>

    <LinearLayout
        style="@style/plan_ll_styl"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            style="@style/control_tv_styl"
            android:text="作业班组 :" />

        <TextView
            android:id="@+id/control_card_type"
            style="@style/control_card_tv_style"
            android:layout_width="@dimen/dp_100" />

        <TextView
            style="@style/control_tv_styl"
            android:text="工作负责人 :" />

        <TextView
            android:id="@+id/control_card_dep"
            style="@style/control_card_tv_style" />
    </LinearLayout>

    <LinearLayout
        style="@style/plan_ll_styl"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            style="@style/control_tv_styl"
            android:text="成员 :" />

        <TextView
            android:id="@+id/control_card_personal"
            style="@style/control_card_tv_style"
            android:layout_width="match_parent" />

    </LinearLayout>

    <LinearLayout
        style="@style/plan_ll_styl"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            style="@style/control_tv_styl"
            android:text="工作票号 :" />

        <TextView
            android:id="@+id/control_card_no"
            style="@style/control_card_tv_style" />
    </LinearLayout>

    <LinearLayout
        style="@style/plan_ll_styl"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            style="@style/control_tv_styl"
            android:layout_width="@dimen/dp_90"
            android:text="计划工作时间 :" />

        <TextView
            android:id="@+id/control_card_start_time"
            style="@style/control_card_tv_style"
            android:layout_width="@dimen/dp_100"
            android:hint="选择开始时间" />

        <TextView
            style="@style/control_tv_styl"
            android:layout_width="@dimen/dp_30"
            android:text="至 :" />

        <TextView
            android:id="@+id/control_card_end_time"
            style="@style/control_card_tv_style"
            android:layout_width="@dimen/dp_100"
            android:hint="选择结束时间" />
    </LinearLayout>

    <View
        style="@style/control_line_styl"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_33" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序号"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_33" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="关键工序"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_33" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="标准及要求"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_33" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="风险提醒"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_33" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="检查情况"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_33" />
    </LinearLayout>

    <View style="@style/control_line_styl" />
</LinearLayout>