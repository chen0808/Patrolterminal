<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/item_todo_type_ll"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_todo_type_tv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/plan_mon_bg"
            android:gravity="center"
            android:text="安全"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/item_plan_creater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="xxx"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/item_todo_type_ll"
        android:layout_toLeftOf="@+id/todo_go"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/item_todo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="新金一线 03# 杆塔"
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_todo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提交人:"
            android:textColor="@color/color_69"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/item_todo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提交时间 :"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/color_69"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/todo_go"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:scaleType="center"
        android:src="@mipmap/icon_go" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/write_order_grat" />
    <TextView
        android:id="@+id/item_yxtodo_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/state_red_bg"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="3dp"
        android:paddingBottom="4dp"
        android:paddingRight="@dimen/dp_10"
        android:text="审核中"
        android:textColor="@color/write_red"
        android:textSize="@dimen/sp_11"
        />
</RelativeLayout>
