<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_30"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/car_number"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/my_info"

        android:textSize="@dimen/sp_15"
        android:text="xxx"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/driver_name"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/my_info"
        android:textSize="@dimen/sp_15"
        android:text="xxx"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/car_number"
        />
    <TextView
        android:id="@+id/group_name"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/my_info"

        android:textSize="@dimen/sp_15"
        android:text="xxx"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/driver_name"
        />
    <ImageView
        android:id="@+id/day_plan_check_iv"
        android:layout_width="@dimen/dp_50"
        android:layout_height="match_parent"
        android:src="@mipmap/circle_no"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_de"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>