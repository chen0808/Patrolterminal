<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_card_division_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:minHeight="@dimen/dp_30"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:id="@+id/divison_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:id="@+id/divison_key"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="核对现场"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:id="@+id/divison_demand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="6"
                android:gravity="center"
                android:text="1.1持票核对线路“三号”"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:id="@+id/divison_risk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="勿登杆塔"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />

            <TextView
                android:id="@+id/divison_inspections"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="检查情况"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_33" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_33" />
</LinearLayout>