<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <org.angmarch.views.NiceSpinner
        android:id="@+id/licensing_method_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/method_of_notification"
        android:gravity="center"
        android:textSize="10sp"></org.angmarch.views.NiceSpinner>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/write_order_grat"></ImageView>

    <EditText
        android:id="@+id/licensor_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_horizontal"></EditText>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/write_order_grat"></ImageView>

    <ImageView
        android:id="@+id/sign_job_manager_iv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:padding="4dp" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/write_order_grat"></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/time_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"></TextView>
    </LinearLayout>


</LinearLayout>
