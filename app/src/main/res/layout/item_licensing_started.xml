<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/licensing_method_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:gravity="center_horizontal"
        style="@style/itemSpinnerStyle"
        android:entries="@array/method_of_notification"
        ></Spinner>

    <ImageView android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/write_order_grat"></ImageView>

    <EditText
        android:id="@+id/licensor_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@null"></EditText>

    <ImageView android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/write_order_grat"></ImageView>

<!--    <TextView
        android:id="@+id/sign_job_manager_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"></TextView>-->

    <ImageView
        android:id="@+id/sign_job_manager_iv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:background="@null"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

    <ImageView android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/write_order_grat"></ImageView>

    <LinearLayout android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/time_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"></TextView>
    </LinearLayout>


</LinearLayout>
