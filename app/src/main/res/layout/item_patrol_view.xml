<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/item_patrol_date_ll"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/item_patrol_date_tv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/plan_day_bg"
            android:text="日"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/item_patrol_creater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郭靖明"
            android:textSize="@dimen/sp_11"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <TextView
        android:ellipsize="end"
        android:lines="1"
        android:id="@+id/item_patrol_name"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:text="桃开一号杆"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_patrol_date_ll"
        android:textColor="@color/main_black"
        android:textSize="@dimen/sp_15"
        />
    <TextView
        android:id="@+id/item_patrol_state"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_20"
        android:text="审核中"
        android:textColor="@color/white"
        android:background="@drawable/examing_bg"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/item_patrol_name"
        android:textSize="@dimen/sp_11"
        />
    <TextView
        android:id="@+id/item_patrol_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="巡视时间：xxxx"
        android:layout_below="@id/item_patrol_name"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/item_patrol_date_ll"
        android:textSize="@dimen/sp_13"
        />

    <TextView
        android:id="@+id/item_patrol_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注:xxxx"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/item_patrol_date_ll"
        android:layout_below="@id/item_patrol_time"
        android:textSize="@dimen/sp_13"
        />


    <ImageView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/icon_go"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:scaleType="center"
        />

    <TextView
        android:id="@+id/week_to_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:text="日计划"
        android:textSize="@dimen/sp_13"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/plan_date_bg"
        android:textColor="@color/white"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/write_order_grat"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
