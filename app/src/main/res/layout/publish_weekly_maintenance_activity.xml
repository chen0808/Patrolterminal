<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/base_status_bar"
        >
        <TextView
            android:id="@+id/week_maintenace_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="周检修工作"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:background="@drawable/date_white_bg"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/date_color"
            />

        <TextView
            android:id="@+id/other_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ZY201902010"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:background="@drawable/date_grey_bg"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/week_maintenace_tv"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/weekly_maintenance_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/weekly_maintenance_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/weekly_maintenance_ll">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备名称："
                    android:layout_gravity="center_vertical"></TextView>

                <TextView
                    android:id="@+id/outage_line_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1#kv"
                    android:background="@drawable/stoke_gray"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"></TextView>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/weekly_maintenance_ll">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停电天数："
                    android:layout_gravity="center_vertical"></TextView>

                <TextView
                    android:id="@+id/outage_plan_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/stoke_gray"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"></TextView>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/weekly_maintenance_ll">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作内容："
                    android:layout_gravity="center_vertical"></TextView>

                <TextView
                    android:id="@+id/work_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:background="@drawable/stoke_gray"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"></TextView>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/weekly_maintenance_ll">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务来源："
                    android:layout_gravity="center_vertical"></TextView>

                <TextView
                    android:id="@+id/task_sourse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/stoke_gray"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"></TextView>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/weekly_maintenance_ll">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风险等级："
                    android:layout_gravity="center_vertical"></TextView>

                <TextView
                    android:id="@+id/rist_level"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/stoke_gray"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"></TextView>
            </LinearLayout>
