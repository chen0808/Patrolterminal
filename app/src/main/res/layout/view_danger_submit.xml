<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_danger_submit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_5"
    android:minHeight="@dimen/dp_30"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/view_danger_name"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity="right"
        android:textColor="@color/color_33"
        android:text="隐患类别："
        />
    <TextView
        android:id="@+id/view_danger_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textColor="@color/black_gray"
        android:layout_toRightOf="@id/view_danger_name"
        android:gravity="center_vertical"
        android:text=""
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d1"
        android:layout_below="@id/view_danger_content"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>
